<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Alert</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css'>    
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/home.js"></script>


</head>
<body>

    <nav class="navbar navbar-expand-sm bg-light">
        <div class="w-25 ms-3">
            Axiros Netbox alert
        </div>
        <ul class="navbar-nav ml-auto d-flex justify-content-end w-75">
            <div class="nav-item dropdown d-flex align-items-center">
                <a class="nav-link dropdown-toggle mx-2" href="#" role="button" data-bs-toggle="dropdown">
                    <%= user %>
                </a>
                <ul class="mt-3 dropdown-menu dropdown-menu-end">
                  <li>
                    <form class="p-4 w-100">
                        <div class="form-group" style="width: 270px;">
                            <label for="exampleInputPassword1" class="w-100 m-1">Change email</label>
                            <input type="email" class="form-control w-100 m-1" id="newEmail" placeholder="enter new email">
                        </div>
                        <button type="submit" class="btn btn-primary m-1">Submit</button>
                    </form>
                  </li>
                  
                </ul>
            </div>
                
                
            <li class="nav-item p-2">
                <a class="nav-link" href="#" onclick="logout()">
                    log out
                </a>
            </li>
        </ul>
    </nav>

    <div class="shadow rounded bg-light p-3 mt-4 w-75 mx-auto">
        <div class="d-flex justify-content-between mt-3 mb-3 ml-0 w-50 mx-auto">
            <input id="masterInp" type="text" class="form-control w-75" placeholder="Enter id you wish to follow">
            <button class="btn btn-success" onclick="addMaster()" style="width: 20%;">Add!</button>
        </div>
    </div>
    <div class="row w-100 p-3 mt-5 d-flex justify-content-around">
        <div class="col-xs-6 col-md-4 rounded shadow bg-light py-3 mx-1" style="width: 30%;">
            <div class="mb-2">
                Devices
            </div>
            <ul id="deviceList" class="list-group">
                <% for (let device of devices) { %>
                    <li class="list-group-item d-flex justify-content-between" id="<%= device %>-li-device">
                        <div class="w-75 text-center d-flex my-auto">
                            <%= device %>
                        </div>
                        <button class="btn btn-danger btn-sm" type="button" title="Delete" onclick="deleteElem('device','<%= device %>')">
                            <i class="bi bi-trash fa-2x"></i>
                        </button>
                    </li>
                <% } %>
            </ul>
        </div>
        <div class="col-xs-6 col-md-4 rounded shadow bg-light py-3 mx-1" style="width: 30%;">
            <div class="mb-2">
                IPs
            </div>
            <ul id = "ipList" class="list-group">
                <% for (let ip of ips) { %>
                    <li class="list-group-item d-flex justify-content-between" id="<%= ip %>-li-ip">
                        <div class="w-75 text-center d-flex my-auto">
                            <%= ip %>
                        </div>
                        <button class="btn btn-danger btn-sm" type="button" title="Delete" onclick="deleteElem('ip','<%= ip %>')">
                            <i class="bi bi-trash fa-2x"></i>
                        </button>
                    </li>
                <% } %>
            </ul>
        </div>
        <div class="col-xs-6 col-md-4 rounded shadow bg-light py-3 mx-1" style="width: 30%;">
            <div class="mb-2">
                IP ranges
            </div>
            <ul id="rangeList" class="list-group">
                <% for (let range of ranges) { %>
                    <li class="list-group-item d-flex justify-content-between" id="<%= range %>-li-range">
                        <div class="w-75 text-center d-flex my-auto">
                            <%= range %>
                        </div>
                        <button class="btn btn-danger btn-sm" type="button" title="Delete" onclick="deleteElem('range','<%= range %>')">
                            <i class="bi bi-trash fa-2x"></i>
                        </button>
                    </li>
                <% } %>
            </ul>
        </div>
    </div>

    <footer class="text-center text-lg-start bg-light text-muted fixed-bottom">
        <!-- Section: Social media -->
        <section class="d-flex justify-content-center justify-content-lg-between p-4 border-bottom">
          <!-- Left -->
          <div class="me-5 d-none d-lg-block">
            <span>For feature requests and bug reports contact <a href="mailto:domlija@axiros.com">domlija@axiros.com</a></span>
          </div>
        </section>
    </footer>

    <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"
  ></script>
</body>
</html>